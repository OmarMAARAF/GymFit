<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout.CreateAccount">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl0">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/loginIcon"
            android:src="@drawable/login_icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_black"
            android:text="Sign up"
            android:layout_toRightOf="@id/loginIcon"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginDesc"
            android:layout_marginHorizontal="20dp"
            android:text="It's fast and easy. "
            android:fontFamily="@font/avenir"
            android:textSize="20dp"
            android:layout_below="@id/loginIcon"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl0"
        android:id="@+id/rl1"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fullname"
            android:background="@drawable/custom_input"
            android:padding="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="text"
            android:hint="Username"
            android:textSize="14dp"
            android:includeFontPadding="true"
            android:ems="10"
            android:drawableStart="@drawable/custom_person_icon1"
            android:drawablePadding="12dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl2"
        android:layout_below="@+id/rl1"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:background="@drawable/custom_input"
            android:padding="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="text"
            android:hint="Email"
            android:textSize="14dp"
            android:includeFontPadding="true"
            android:ems="10"
            android:drawableStart="@drawable/custom_person_icon"
            android:drawablePadding="12dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl3"
        android:layout_below="@+id/rl2"

        >

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_lock_icon"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Password"
            android:includeFontPadding="true"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textSize="14dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl4"
        android:layout_below="@+id/rl3"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/repassword"
            android:background="@drawable/custom_input"
            android:padding="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="textPassword"
            android:hint="Repassword"
            android:textSize="14dp"
            android:includeFontPadding="true"
            android:ems="10"
            android:drawableStart="@drawable/custom_lock_icon"
            android:drawablePadding="12dp"
            />


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl5"
        android:layout_below="@id/rl4">

        <Button
            android:id="@+id/btnRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#73E8C1"
            android:fontFamily="@font/poppins_regular"
            android:padding="15dp"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:cornerRadius="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnRegistration"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:fontFamily="@font/avenir_black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/providers"
            android:layout_below="@id/btnRegistration"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginHorizontal="20dp">
            <Button
                android:id="@+id/GoogleBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/google"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="left|center_horizontal"
                android:text="Google"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_marginRight="20dp"
                android:paddingVertical="10dp"
                app:cornerRadius="10dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fbbtn"
                android:drawableTop="@drawable/facebook"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="left|center_horizontal"
                android:text="Facebook"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:paddingVertical="10dp"
                app:cornerRadius="10dp"
                />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>